<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zsh.resource.mapper.MemberDishLogMapper">

    <resultMap id="BaseResultMap" type="com.zsh.resource.domain.MemberDishLog">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="dishId" column="dish_id" jdbcType="BIGINT"/>
            <result property="memberId" column="member_id" jdbcType="BIGINT"/>
            <result property="clickNum" column="click_num" jdbcType="INTEGER"/>
            <result property="isCollect" column="is_collect" jdbcType="TINYINT"/>
            <result property="isUp" column="is_up" jdbcType="INTEGER"/>
            <result property="commentNum" column="comment_num" jdbcType="INTEGER"/>
            <result property="isDeleted" column="is_deleted" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,dish_id,member_id,
        click_num,is_collect,is_up,
        comment_num,is_deleted,create_time,
        update_time
    </sql>
    <!-- 分页查询个人主页收藏菜谱的数据 -->
    <select id="getDishCollectPage" resultType="com.zsh.resource.domain.vo.personal.PersonalDishVo">
        SELECT
            d.name,
            d.image_url AS imageUrl,
            d.id,
            d.publisher_id AS publisherId,
            drl.click_num AS viewNum,
            drl.collect_num AS collectNum
        FROM member_dish_log AS mdl
        LEFT JOIN dish d on d.id = mdl.dish_id
        LEFT JOIN dish_rec_log drl on d.id = drl.dish_id
        WHERE mdl.member_id = #{userId} AND mdl.is_collect = 1
        LIMIT #{startSize}, #{pageSize}
    </select>
</mapper>
