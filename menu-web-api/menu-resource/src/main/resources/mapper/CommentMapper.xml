<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zsh.resource.mapper.CommentMapper">

    <resultMap id="BaseResultMap" type="com.zsh.resource.domain.Comment">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="dishId" column="dish_id" jdbcType="BIGINT"/>
            <result property="memberId" column="member_id" jdbcType="BIGINT"/>
            <result property="publishDate" column="publish_date" jdbcType="TIMESTAMP"/>
            <result property="isDeleted" column="is_deleted" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>
    <resultMap id="BaseDetailCommentMap" type="com.zsh.resource.domain.vo.CommentVo">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="imageUrl" column="image_url" jdbcType="VARCHAR"/>
        <result property="dishId" column="dish_id" jdbcType="BIGINT"/>
        <result property="memberId" column="member_id" jdbcType="BIGINT"/>
        <result property="publishDate" column="publish_date"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,content,dish_id,
        member_id,publish_date,is_deleted,
        create_time,update_time
    </sql>
    <select id="getCommentsByDishId" resultMap="BaseDetailCommentMap">
        SELECT
            c.id,
            c.content,
            c.dish_id,
            c.member_id,
            c.publish_date,
            m.username,
            m.image_url
        FROM comment AS c
        LEFT JOIN member m on m.id = c.member_id
        WHERE c.dish_id = #{id}
    </select>
</mapper>
